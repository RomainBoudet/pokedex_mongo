<%- include('partials/header') %>
<section class="pokemon-detail row">
    <div class="col-lg-12">
        <div class="container-fluid">
            <header class="row">
                <h2 class="col-lg-12 text-center text-white mb-3">Détails de <%=pokemonDetail.name%></h2>
            </header>
            <main class="row">
                <div class="col-lg-4 image">
                    <img src="/img/<%=pokemonDetail.num%>.png">
                </div>
                <div class="col-lg-8 fiche p-3">
                    <h3 class="mt-4"><%=pokemonDetail.num%> <%=pokemonDetail.name%></h3>
                    <ul class="type-list reset-list d-inline-flex m-2 p-2">
                        <% for(const item of pokemonDetail.colorByType) { %>
                        <li><a href="/type/<%=item.type%>" class="rounded d-block m-2 p-2"
                                style="background-color: #<%=item.color%>"><%=item.type%></a></li>
                        <% } %>
                    </ul>
                    <h4 class="mb-4">Statistiques</h4>

                    <div class="stats container-fluid.no-gutters mb-4">

                        <div class="row">
                            <div class="col-2">PV</div>
                            <div class="col-2"><%=pokemonDetail.pv%></div>
                            <div class="col-8">
                                <div class="status-bar rounded overflow-hidden"><span
                                        style="width:<%=pokemonDetail.pv%>%"></span></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">Attaque</div>
                            <div class="col-2"><%=pokemonDetail.attaque%></div>
                            <div class="col-8">
                                <div class="status-bar rounded overflow-hidden"><span
                                        style="width:<%=pokemonDetail.attaque%>%"></span></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">Défense</div>
                            <div class="col-2"><%=pokemonDetail.defense%></div>
                            <div class="col-8">
                                <div class="status-bar rounded overflow-hidden"><span
                                        style="width:<%=pokemonDetail.defense%>%"></span></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">Attaque Spé.</div>
                            <div class="col-2"><%=pokemonDetail.attaque_spe%></div>
                            <div class="col-8">
                                <div class="status-bar rounded overflow-hidden"><span
                                        style="width:<%=pokemonDetail.attaque_spe%>"></span></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">Défense Spé.</div>
                            <div class="col-2"><%=pokemonDetail.defense_spe%></div>
                            <div class="col-8">
                                <div class="status-bar rounded overflow-hidden"><span
                                        style="width:<%=pokemonDetail.defense_spe%>%"></span></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">Vitesse</div>
                            <div class="col-2"><%=pokemonDetail.vitesse%></div>
                            <div class="col-8">
                                <div class="status-bar rounded overflow-hidden"><span
                                        style="width:<%=pokemonDetail.vitesse%>%"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="container-fluid.no-gutters mb-4">
                        <div class="row"
                            style="flex-direction: row; justify-content:space-between; align-items:center; ">
                            <div class="col-2">Temps de reproduction : <%=pokemonDetail.spawn_time%></div>
                            <div class="col-2">Chance de reproduction : <%=pokemonDetail.spawn_chance%></div>
                            <div class="col-2">Hauteur : <%=pokemonDetail.height%> </div>
                            <div class="col-2">Poid : <%=pokemonDetail.weight%></div>
                            <ul class="type-list reset-list d-inline-flex mt-2 mb-3">
                                <div class="col-2">Faiblesses :</div>
                                <% for(const item of pokemonDetail.colorByWeaknesses) { %>
                                <li><a href="/type/<%=item.type%>" class="rounded d-block m-2 p-2"
                                        style="background-color: #<%=item.color%>"><%=item.type%></a></li>
                                <% } %>
                            </ul>
                            <% if (pokemonDetail.next_evo) { %>
                            <ul class="type-list reset-list d-inline-flex mt-2 mb-3">
                                <div class="col-2">Evolution :</div>
                                <% for(const item of pokemonDetail.next_evo) { %>
                                <li><a href="/pokemon/<%=item.num%>" class="rounded d-block mr-2 p-2">
                                        <figure class="p-3">
                                            <img src="/img/<%=item.num%>.png">
                                            <figcaption>
                                                <%=item.name%>
                                            </figcaption>
                                        </figure>
                                    </a></li>
                                <% } %>
                            </ul>
                            <% } else { %>
                            <% } %>
                            <% if (pokemonDetail.prev_evo) { %>
                                <ul class="type-list reset-list d-inline-flex mt-2 mb-3">
                                    <div class="col-2">Prédécesseur :</div>
                                    <% for(const item of pokemonDetail.prev_evo) { %>
                                    <li><a href="/pokemon/<%=item.num%>" class="rounded d-block mr-2 p-2">
                                            <figure class="p-3">
                                                <img src="/img/<%=item.num%>.png">
                                                <figcaption>
                                                    <%=item.name%>
                                                </figcaption>
                                            </figure>
                                        </a></li>
                                    <% } %>
                                </ul>
                                <% } else { %>
                                <% } %>
                        </div>
                    </div>

                </div>
            </main>
            <footer class="text-center">
                <a href="/">Revenir à la liste</a>
            </footer>
        </div>
    </div>
</section>
<%- include('partials/footer') %>